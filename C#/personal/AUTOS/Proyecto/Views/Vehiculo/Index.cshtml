@model IEnumerable<Entidad.Carro>

@{
    ViewBag.Title = "Listado Vehiculos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Vehiculos</h2>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item " aria-current="page">Home</li>
        <li class="breadcrumb-item active" aria-current="page">Vehiculos</li>
    </ol>
</nav>



<p>
    @Html.ActionLink("Agregar Vehículo ", "Crear")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID_Vehiculo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Placa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dueño)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID_Vehiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Placa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dueño)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.ID_Vehiculo }) |
                @Html.ActionLink("Detalles", "GetDetalle", new { id = item.ID_Vehiculo }) |
                @Html.ActionLink("Eliminar", "Eliminar", new { id = item.ID_Vehiculo })
            </td>
        </tr>
    }

</table>
